# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=student_rental_db

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_DB_NAME=student_rental_db

# Authentication
SECRET_KEY=your_very_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Deployment Configuration
ENVIRONMENT=development
DEBUG=True

# Localization
DEFAULT_LANGUAGE=it
SUPPORTED_LANGUAGES=it,en

# External Services
SCRAPING_PROXY_URL=https://proxy-service-url.com
SCRAPING_PROXY_USERNAME=your_proxy_username
SCRAPING_PROXY_PASSWORD=your_proxy_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_NAME=your_telegram_bot_name

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BOT_NAME=${TELEGRAM_BOT_NAME}

# SSL Configuration (for production)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
